<% include ./partials/header.ejs %>
	<h1 class="list-media">Watched Movies</h1>
	<div class="main-container">
		<div class="container-fluid queued-fluid-container">
		<% for (let i = 0; i < data.watchedMovies.length; i++) { %>
			<div class="container container-queued">
			  	<img class="col-md-3 queued" src="https://image.tmdb.org/t/p/w370_and_h556_bestv2<%= data.watchedMovies[i].poster_path %>">
			  	<div class="middle">
				  	<a href="/movie-profile?id=<%= data.watchedMovies[i].id %>" class="button btn btn-info col-md-8">Info</a>
				   	 <button value="<%= data.watchedMovies[i].id %>" type="button" class="button btn btn-danger coll-md-8 remove-movie-watched">Remove</button>
				   <!-- Button trigger modal -->
						<button type="button" class="button btn btn-primary add-comment" data-toggle="modal" data-target="#exampleModal-<%= data.watchedMovies[i].id %>">
						  Leave a comment
						</button>
			   	</div>
			</div>		

<!-- Modal -->
			<div class="modal fade" id="exampleModal-<%= data.watchedMovies[i].id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			      <div class="modal-header">
			        <h5 class="modal-title" id="exampleModalLabel">Comments</h5>
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
			          <span aria-hidden="true">&times;</span>
			        </button>
			      </div>
			      <form id="<%= data.watchedMovies[i].id %>" class="modal-body comment-movie">
			        <textarea id="<%= data.watchedMovies[i].id %>" class="comment-box">
			        <%= data.watchedMovies[i].comment %>
			        </textarea>
			      </form>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			        <button type="submit" form="<%= data.watchedMovies[i].id %>"  class="btn btn-primary">Save changes</button>
			      </div>
			    </div>
			  </div>
			</div>
		<% } %>

		</div>
	</div>
	
<% include ./partials/footer.ejs %>